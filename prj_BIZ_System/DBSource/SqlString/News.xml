<?xml version="1.0" encoding="utf-8" ?>
<sqlMap namespace="News"
        xmlns="http://ibatis.apache.org/mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <!--
  <alias>
    <typeAlias alias="ActivityRegisterModel" type="prj_BIZ_System.Models.ActivityRegisterModel"/>
  </alias>
  -->

  <statements>
    <!--查詢全部-->
    <select id="NewsSelectAll" resultMap="NewsResultMap">
      SELECT *
      FROM news
    </select>

    <!--查詢單筆-->
    <select id="NewsSelectOne" resultMap="NewsResultMap" parameterClass="prj_BIZ_System.Models.NewsModel">
      SELECT *
      FROM news
      WHERE news_no = #news_no#
    </select>

    <!--新增單筆-->
    <insert id="NewsInsertOne" parameterClass="prj_BIZ_System.Models.NewsModel">
      INSERT INTO news (
      manager_id, news_title, news_date,
      news_type, activity_id,
      website, content
      ) VALUES (
      #manager_id#, #news_title#, #news_date#,
      #news_type#, #activity_id#,
      #website#, #content#
      )
    </insert>

    <!--刪除單筆-->
    <delete id="NewsDeleteOne" parameterClass="prj_BIZ_System.Models.NewsModel">
      DELETE FROM news
      WHERE news_no = #news_no#
    </delete>

    <!--修改單筆-->
    <update id="NewsUpdateOne" parameterClass="prj_BIZ_System.Models.NewsModel">
      UPDATE news SET
        manager_id = #manager_id#,
        news_title = #news_title#,
        news_date = #news_date#,
        news_type = #news_type#,
        activity_id = #activity_id#,
        website = #website#,
        content = #content#
      WHERE news_no = #news_no#
    </update>

  </statements>

  <resultMaps>
    <resultMap id="NewsResultMap" class="prj_BIZ_System.Models.NewsModel">
      <result property="news_no" column="news_no"/>
      <result property="manager_id" column="manager_id"/>
      <result property="news_title" column="news_title"/>
      <result property="news_date" column="news_date"/>
      <result property="news_type" column="news_type"/>
      <result property="activity_id" column="activity_id"/>
      <result property="website" column="website"/>
      <result property="content" column="content"/>
    </resultMap>
  </resultMaps>

</sqlMap>

