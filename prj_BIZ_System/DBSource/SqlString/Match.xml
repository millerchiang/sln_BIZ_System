      <!--查詢賣家要媒合的買家名稱與買家需求, 後台_顯示某活動的買主公司名稱-->
      <select id="SelectSellerMatchToBuyerNameAndNeed" resultMap="SellerMatchToBuyerNameAndNeed" parameterClass="BuyerInfoModel">
        SELECT *
        FROM buyer_list bl
        INNER JOIN user_info ui
        ON bl.buyer_id = ui.user_id
