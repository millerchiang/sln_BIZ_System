                        <input type="text" name="hlink" value="@Model.hlink" class="regis_col02R">

                        <span class="regis_col02L regis_col_bg">顯示於網頁:</span>
                        <div class="regis_col01R_input">
                            <input type="radio" class="radioinput" id="active01" name="active" value="0" @active01>
                            <label for="active01">不顯示</label>
                            <input type="radio" class="radioinput" id="active02" name="active" value="1" @active02>
                            <label for="active02">顯示</label>
                        </div>
                </div>
                <div class="centerbox">
