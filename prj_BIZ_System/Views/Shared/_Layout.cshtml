<!DOCTYPE html>

@if (ViewBag.Title != "Login" && ViewBag.Title != "Register")
{

    if (Request.Cookies["UserInfo"] == null || Request.Cookies["UserInfo"]["user_id"] == null)
    {
        Response.Redirect("~/Home/Login");
    }
}

<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -生產力2.0</title>
    @Styles.Render("~/stylesheets/css")
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("pagestyle",false)
    @*<script src="../Scripts/ckeditor/ckeditor.js" type="text/javascript"></script>*@
</head>
<body>

    <header>
        <div class="headerbox">
            <ul class="head_langBu">
                <li><a href="">English</a></li>
                <li><a href="" class="active">中文</a></li>
            </ul>
            <h1 class="head_logo">
                <a href="~/Home/Index">Matchmaking System</a>
            </h1>
            <nav class="head_nav">
                <ul>
                    @if (ViewBag.Title == "Register" && ViewBag.PageType == "Create")
                    {
                        <li>@Html.ActionLink("登入", "Login", "Home")</li>
                    }
                    else if (ViewBag.Title == "Login")
                    {
                    }
                    else
                    {

                        <li>@Html.ActionLink("企業資料庫", "Company", "Home")</li>
                        <li>
                            <a href="javascript:void(0)">帳號管理</a>
                            <ul>
                                <li><a href="/User/Register">我的資料庫</a></li>
                                <li><a href="/Match/AccountManage">商務對接</a></li>
                            </ul>
                        </li>
                        <li>
                            <a href="/Home/News">最新消息</a>
                            <ul>
                                <li><a href="/Home/News?type=1">新聞消息</a></li>
                                <li><a href="/Home/News?type=0">活動消息</a></li>
                            </ul>
                        </li>

                        <li>@Html.ActionLink("首頁", "Index", "Home")</li>

                    }
                    

                </ul>
            </nav>
        </div>
    </header>
    <main>
        @RenderBody()
    </main>

    <footer>
        <p>&copy; @DateTime.Now.Year -版權所有 Copyright © 2016 BIZ Matchmaking System. All rights reserved</p>
    </footer>

<!--    
    @Scripts.Render("~/bundles/jquery")
