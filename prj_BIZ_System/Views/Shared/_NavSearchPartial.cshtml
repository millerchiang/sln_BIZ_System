@using prj_BIZ_System.Models
@model IList<EnterpriseSortListModel>

@{

}

<aside>
    <form action="/Home/CompanyList" class="searchbox">
        <input type="text" name="companyName" placeholder="公司名">
        <select name="sort_id" id="">
            <option value="">產業別</option>
            @if (Model != null)
            {
                foreach (EnterpriseSortListModel md in Model)
                {
                    <option value="@md.sort_id">@md.enterprise_sort_name</option>
                }
            }
        </select>
        <button class="searchbox_submit" type="submit"> 搜尋 </button>
    </form>
</aside>

<script>
    var vn = location.pathname.replace("/User/","");
    var urlMapping = [
        ["ProductList"  , 1],
        ["CatalogCreate", 2],
        ["CatalogList"  , 2]
    ];

    $.each(urlMapping, function (index, el) {
        if(el[0] == vn){
            $(".datalist").find("li").eq(el[1]).addClass("inforlistactive");
        }
    });

    
</script>