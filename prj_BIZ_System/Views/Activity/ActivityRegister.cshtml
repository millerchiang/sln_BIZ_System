@using prj_BIZ_System.Models
@model prj_BIZ_System.Models.Activity_ViewModel

@{
    ViewBag.Title = prj_BIZ_System.LanguageResource.User.lb_activityregister;
}

@section pagestyle{
    <link href="~/stylesheets/registerd.css" rel="stylesheet" />
    @Styles.Render("~/Scripts/css/fancybox")
}


<div class="article_col1">

    <article class="form_box article_col2">
        <h2>@prj_BIZ_System.LanguageResource.User.lb_activity_register</h2>
            <input type="hidden" name="activity_id" value="@Model.activityinfo.activity_id">
            <label for="activity_id" class="regis_col02L regis_col_bg2">@prj_BIZ_System.LanguageResource.User.lb_activity_name</label>

            @{
                var activity_name = Model.activityinfo.activity_name;
                if (Request.Cookies["_culture"] != null && Request.Cookies["_culture"].Value != "zh-TW")
                {
                    if (Model.activityinfo.activity_name_en != null && Model.activityinfo.activity_name_en != "")
                    {
                        activity_name = Model.activityinfo.activity_name_en;
                    }
                }
            }

            <p class="regis_col03R contentspan">@activity_name</p>


            <label for="leader" class="regis_col02L regis_col_bg2">@prj_BIZ_System.LanguageResource.User.lb_user_id</label>
            <p class="regis_col03R contentspan">@Model.activityregister.user_id</p>

            <label for="leader" class="regis_col03L regis_col_bg2">@prj_BIZ_System.LanguageResource.User.lb_companyname</label>
            @{
                var company = Model.activityregister.company;
                if (Request.Cookies["_culture"] != null && Request.Cookies["_culture"].Value != "zh-TW")
                {
                    if (Model.activityregister.company_en != null && Model.activityregister.company_en != "")
                    {
                        company = Model.activityregister.company_en;
                    }
                }
            }
            <p class="regis_col03R contentspan">@company</p>

            <label for="starttime" class="regis_col02L regis_col_bg2">@prj_BIZ_System.LanguageResource.User.lb_activity_period</label>
            <p id="starttime" class="regis_col03R contentspan">@Model.activityinfo.create_time.ToString("yyyy/MM/dd tt hh:mm")</p>

            <label for="endtime" class="regis_col03L"> ~ </label>
            <p id="endtime" class="regis_col03R contentspan">@Model.activityinfo.endtime.ToString("yyyy/MM/dd tt hh:mm")</p>

            <label for="activityAddr" class="regis_col02L regis_col_bg2">@prj_BIZ_System.LanguageResource.User.lb_activity_site</label>

            @{
                var addr = Model.activityinfo.addr;
                if (Request.Cookies["_culture"] != null && Request.Cookies["_culture"].Value != "zh-TW")
                {
                    if (Model.activityinfo.addr_en != null && Model.activityinfo.addr_en != "")
                    {
                        addr = Model.activityinfo.addr_en;
                    }
                }
            }

            <p id="activityAddr" class="regis_col02R contentspan">@addr</p>

            <label for="leader" class="regis_col02L regis_col_bg2">@prj_BIZ_System.LanguageResource.User.lb_activity_amount</label>
            <p class="regis_col03R contentspan">@Model.activityregister.quantity</p>

            <label for="leader" class="regis_col03L regis_col_bg2">@prj_BIZ_System.LanguageResource.User.lb_activity_participant</label>
            <p class="regis_col03R contentspan">@Model.activityregister.name_a  @Model.activityregister.title_a</p>


            <label for="leader" class="regis_col02L regis_col_bg2">@prj_BIZ_System.LanguageResource.User.lb_contactman</label>
            <p class="regis_col03R contentspan">@Model.activityregister.name_b  @Model.activityregister.title_b</p>

            <label for="leader" class="regis_col03L regis_col_bg2">@prj_BIZ_System.LanguageResource.User.lb_phone_no</label>
            <p class="regis_col03R contentspan">@Model.activityregister.phone</p>

            <label for="leader" class="regis_col02L regis_col_bg2">@prj_BIZ_System.LanguageResource.User.lb_tel</label>
            <p class="regis_col03R contentspan">@Model.activityregister.telephone</p>

            <label for="leader" class="regis_col03L regis_col_bg2">@prj_BIZ_System.LanguageResource.User.lb_email</label>
            <p class="regis_col03R contentspan">@Model.activityregister.email</p>
            
            @*
            <label for="website" class="regis_col02L regis_col_bg2">公司網址</label>
            <div class="regis_col02R">
                <a class="linkb" href="@Model.userinfo.website" target="_block">@Model.userinfo.website</a>
            </div>
            *@
            <label class="regis_col02L regis_col_bg2">@prj_BIZ_System.LanguageResource.User.lb_companybrief</label>
            <span class="regis_col02R contentspan">@Model.activityregister.user_info</span>
            <label class="regis_col02L regis_col_bg2">@prj_BIZ_System.LanguageResource.User.lb_companybrief (English)</label>
            <span class="regis_col02R contentspan">@Model.activityregister.user_info_en</span>
            @*
            <label for="verticals" class="regis_col02L regis_col_bg2">產業別</label>
            <p class="regis_col02R verticalslist contentspan">
                @foreach (EnterpriseSortAndListModel enterpriseSortAndListmodel in Model.enterprisesortandlistList)
                {
                    @enterpriseSortAndListmodel.enterprise_sort_id @enterpriseSortAndListmodel.enterprise_sort_name <br />
                }
            </p>
            *@
            <div class="regis_col02L regis_col_bg2">
                <label for="" class="label01">@prj_BIZ_System.LanguageResource.User.lb_product_company</label>
            </div>
            <div class="regis_col02R">

                @{
                    if (Model.activityproductselectList.Count == 0)
                    {
                        <label for="" class="label01 contentspan">@prj_BIZ_System.LanguageResource.User.lb_nodata</label>
                    }
                    else
                    {
                <table class="regis_table">
                    <tr>
                        <th></th>
                        <th>@prj_BIZ_System.LanguageResource.User.lb_product_name</th>
                        <th>@prj_BIZ_System.LanguageResource.User.lb_product_info</th>
                    </tr>
                            @foreach (ActivityProductSelectModel activityProductSelectModel in Model.activityproductselectList)
                            {
                                <tr>
                                    <td></td>
                                    <td>@activityProductSelectModel.product_name</td>
                                    <td>@activityProductSelectModel.product_info</td>
                                </tr>
                            }
                </table>
                    }
                    }
            </div>
            <div class="regis_col02L regis_col_bg2">
                <label for="" class="label01">@prj_BIZ_System.LanguageResource.User.lb_company_catalog</label>
            </div>
            <div class="regis_col02R uplodboxR">
@{
    if (Model.activitycatalogselectList.Count == 0)
    {
        <label for="" class="label01 contentspan">@prj_BIZ_System.LanguageResource.User.lb_nodata</label>
    }
    else
    {


                <ul class="regis_dmlist">
                            @foreach (ActivityCatalogSelectModel activityCatalogSelectModel in Model.activitycatalogselectList)
                            {
                                <li>
                                    <a href="@(ViewBag.catalogDir + activityCatalogSelectModel.catalog_file)" target="_blank" class="fancybox">
                                        <div class="regisimg">
                                            <img src="@(ViewBag.coverDir + activityCatalogSelectModel.cover_file)"  alt=""/>
                                        </div>
                                    </a>
                                </li>
                            }
                </ul>
        }
    }
            </div>


        <div class="centerbox">
            <a href="/Activity/ActivityInfo?Id=@Model.activityinfo.activity_id" class="submitbuRed">@prj_BIZ_System.LanguageResource.User.lb_back</a>
        </div>

    </article>
    @{
        Html.RenderAction("_HomeLeftPartial", "Home");
    }
</div>

@Scripts.Render("~/bundles/fancybox")

<script>
    $(function () {
        init();
    })

    function init() {
        $(".fancybox").fancybox({
            width: 600,
            height: 300,
            type: 'iframe'
        });
    }
</script>


