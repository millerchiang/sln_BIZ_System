@using prj_BIZ_System.Models
@model prj_BIZ_System.Models.User_ViewModel

@{
    ViewBag.Title = "Company";
}
@section pagestyle{
    <link href="/stylesheets/company_info.css" rel="stylesheet" />
    @Styles.Render("~/Scripts/css/fancybox")
}

<div class="article_col1">
    <article class="article_col2">
        <h2 class="borderTitle">
            @prj_BIZ_System.LanguageResource.User.lb_company
        </h2>
        <section class="form_box">
            <h2>@prj_BIZ_System.LanguageResource.User.lb_scope</h2>
            <ul class="listlink col2 comicon article_col1">


                @foreach (var sortList in Model.enterprisesortList)
                {
                    if (Request.Cookies["_culture"] == null || Request.Cookies["_culture"].Value == "zh-TW")
                    {
                        <li><a href="CompanyList?sort_id=@sortList.sort_id">@sortList.enterprise_sort_id - @sortList.enterprise_sort_name</a></li>
                    }
                    else{
                        <li><a href="CompanyList?sort_id=@sortList.sort_id">@sortList.enterprise_sort_id - @sortList.enterprise_sort_name_en</a></li>
                    }

                }

            </ul>
        </section>
        <section class="form_box">
            <h2>@prj_BIZ_System.LanguageResource.User.lb_latestcatalog</h2>
            <ul class="regis_dmlist">
                @foreach (var catalogList in Model.cataloglistList)
                {
                    <li>
                        <a href="@(ViewBag.coverDir + catalogList.user_id + "/Catalog/catalog_file/" + catalogList.catalog_file)" target="_blank" class="fancybox">
                            <span>@(catalogList.catalog_name)</span>
                            <div class="regisimg">
                                <img src="@(ViewBag.coverDir + catalogList.user_id + "/Catalog/cover_file/" + catalogList.cover_file)" alt="@(catalogList.catalog_name)">
                            </div>
                            <p class="conpany_name">@(catalogList.company)</p>
                        </a>

                    </li>
                }
            </ul>
        </section>
    </article>
    @{
        Html.RenderAction("_HomeLeftPartial", "Home");
    }
</div>
@Scripts.Render("~/bundles/fancybox")

<script>
    $(function () {
        init();
    })

    function init() {
        $(".fancybox").fancybox({
            width: 600,
            height: 300,
            type: 'iframe'
        });
        $("#deleteLink").click(function () {
            if (confirm("@prj_BIZ_System.LanguageResource.User.lb_deleteornot")) {
                $("#deleteForm").submit();
            }
        });
    }
</script>