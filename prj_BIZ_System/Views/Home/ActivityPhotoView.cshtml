@using prj_BIZ_System.Models
@model prj_BIZ_System.Models.Index_ViewModel



@{
    ViewBag.Title = "ActivityPhotoView";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/stylesheets/screen.css">
    <link rel="stylesheet" href="~/stylesheets/news.css">
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
</head>
<body>
    <main>
    <div class="article_col1">
        <article class="article_col2">
            <h2 class="borderTitle">@prj_BIZ_System.LanguageResource.Localization.getPropValue(Request.Cookies["_culture"], Model.activityphoto, "photo_brief")</h2>

            <div class="magb30 centerbox2">
                <div class="imgboxB" id="resultB">
                    <img src="@Url.Content(string.IsNullOrEmpty(Model.activityphoto.photo_pic_site)?UploadHelper.defaultImgBig:ViewBag.photoDir+Model.activityphoto.photo_pic_site)" alt="">
                </div>
            </div>

            <p class="news_content">
                @prj_BIZ_System.LanguageResource.User.lb_date: @Model.activityphoto.photo_time.ToString("yyyy/MM/dd")<br />
                @Html.Raw(@prj_BIZ_System.LanguageResource.Localization.getPropValue(Request.Cookies["_culture"], Model.activityphoto, "photo_info"))
                <br />
            </p>
        </article>
    </div>
    </main>
</body>
</html>