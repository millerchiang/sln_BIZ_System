        function checkValidationOk(user_pw) {
            var reg = /^(?=.*[a-zA-Z])(?=.*\d).{8,12}$/;
            var errMsg = '';
            if (user_pw == null || user_pw == '') {
                errMsg += '@prj_BIZ_System.LanguageResource.User.lb_newpw_is_empty \n';
            } else {
                if(!reg.test(user_pw)){
                    errMsg += '@prj_BIZ_System.LanguageResource.User.lb_pwset8 \n';
                }
            }
            return errMsg;
        }

