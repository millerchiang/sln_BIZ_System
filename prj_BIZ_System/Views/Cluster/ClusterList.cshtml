
@using prj_BIZ_System.Models
@model prj_BIZ_System.Models.Cluster_ViewModel
    @{
        ViewBag.Title = "ClusterList";
    }

    @section pagestyle{
        <link href="~/stylesheets/sys.css" rel="stylesheet" />
    }

    @Styles.Render("~/Content/jqueryUI")

    <div class="article_col1">

        <article>
            <h2 class="borderTitle2">產業聚落管理</h2>
            <a href="Cluster_Add" class="addbu2 rightbox">新建產業聚落</a>
            <a href="ClusterInvited" class="addbu2 rightbox">受邀聚落清單</a>
            <table class="edittable">
            @if (Model.clusterList.Count > 0)
            {
                <tr>
                    <th width="10%">聚落狀態</th>
                    <th width="20%">聚落名稱</th>
                    <th>聚落說明</th>
                    <th width="20%">邀請狀態</th>
                    <th width="10%">聚落管理</th>
                </tr>
             }
                @foreach (var newInfo in Model.clusterList)
                {
                    <tr>
                        @if (newInfo.enable == "1")
                        {
                            <td>成立</td>
                        }
                        else
                        {
                            <td>未成立</td>
                        }

                        <td>@newInfo.cluster_name</td>
                        <td>@newInfo.cluster_info</td>
                        <td>
                            <div class="centerbox">
                            <a href="Cluster_Add?cluster_no=@newInfo.cluster_no" class="addbured">聚落邀請</a>
                            <a href="Cluster_Status?cluster_no=@newInfo.cluster_no&status=3" class="deleteSbu quit">退出聚落</a>
                            </div>
                        </td>
                        <td>
                        @if (newInfo.enable == "1")
                        {
                            <div class="centerbox">
                                <a href="Cluster_Detail?cluster_no=@newInfo.cluster_no" class="addbured">進入聚落</a>
                            </div>
                        }
                        </td>

                    </tr>
                }
            </table>
            @Html.PagesList((PageList<ClusterModel>)TempData["PageList"])
        </article>
    </div>
