
@using prj_BIZ_System.Models
@model prj_BIZ_System.Models.Cluster_ViewModel
    @{
        ViewBag.Title = "ClusterList";
    }

    @section pagestyle{
        <link href="~/stylesheets/sys.css" rel="stylesheet" />
    }

    @Styles.Render("~/Content/jqueryUI")

    <div class="article_col1">

        <article>
            <h2 class="borderTitle2">產業聚落列表</h2>
            <a href="Cluster_Add" class="addbu2 rightbox">新建產業聚落</a>
@*            <a href="group_invite.html" class="addbured rightbox">聚落邀請</a>*@
            <table class="edittable">
            @if (Model.clusterList.Count > 0)
            {
                <tr>
                    <th>聚落狀態</th>
                    <th>聚落名稱</th>
                    <th>聚落說明</th>
                    <th>邀請狀態</th>
                </tr>
             }
                @foreach (var newInfo in Model.clusterList)
            {
                    <tr>
                        @if (newInfo.enable == "1")
                        {
                            <td>成立</td>
                        }
                        else
                        {
                            <td>未成立</td>
                        }

                        <td>@newInfo.cluster_name</td>
                        <td>@newInfo.cluster_info</td>
                        <td>
                            <div class="centerbox">
                                @if (newInfo.cluster_enable == "1")
                                {
                                    <a href="Cluster_Add?cluster_no=@newInfo.cluster_no" class="addbured">聚落邀請</a>
                                    <a href="Cluster_Quit?cluster_no=@newInfo.cluster_no" class="deleteSbu quit">退出聚落</a>
                                }
                                //else if (newInfo.cluster_enable == "0")
                                //{
                                //}
                                else
                                {
                                    <a href="Cluster_Accept?cluster_no=@newInfo.cluster_no" class="addbured">接受邀請</a>
                                    <a href="Cluster_Reject?cluster_no=@newInfo.cluster_no" class="deleteSbu quit">拒絕邀請</a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </table>
            @Html.PagesList((PageList<ClusterModel>)TempData["PageList"])
        </article>
    </div>
