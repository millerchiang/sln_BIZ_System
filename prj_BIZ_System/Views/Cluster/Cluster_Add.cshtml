
@using prj_BIZ_System.Models
@model prj_BIZ_System.Models.Cluster_ViewModel
@{
    ViewBag.Title = "Cluster_Add";
}

@section pagestyle{
    <link href="~/stylesheets/sys.css" rel="stylesheet" />
    <link href="http://code.jquery.com/ui/1.11.4/themes/hot-sneaks/jquery-ui.css" rel="stylesheet">
}

@Styles.Render("~/Content/jqueryUI")

@if (ViewBag.PageType == "Create")
{
    Model.clusterInfo.cluster_name = "";
    Model.clusterInfo.cluster_info = "";
    Model.clusterInfo.enable = "0";
    Model.clusterInfo.is_public = "1";
    //    Model.clusterInfo.user_id = @Request.Cookies["UserInfo"]["company"];
    Model.clusterInfo.user_id = @Request.Cookies["UserInfo"]["user_id"];
}

    <div class="article_col1s">
        <form id="form" class="form_box sys_searchbox" action="@Url.Action("EditCluster", "Cluster")" method="post">
            <input type="hidden" name="no" value="@Model.clusterInfo.cluster_no">
            <input type="hidden" name="members" value="">
            <input type="hidden" name="enable" value="@Model.clusterInfo.enable">
            @if (ViewBag.PageType == "Create")
            {
                <h2>新建聚落</h2>
            }
            else
            {
                <h2>編輯聚落</h2>
            }
            <label for="" class="regis_col02L spanRed">聚落名稱</label>
            <input type="hidden" name="cluster_name_old" value="@Model.clusterInfo.cluster_name">
            <input type="text" class="regis_col02R" name="cluster_name" value="@Model.clusterInfo.cluster_name" onblur="chkname()" required>

            <label for="" class="regis_col02L">管理者帳號</label>

            <input type="hidden" name="userid" value="@Model.clusterInfo.user_id">
            <span class="regis_col02R contentspan">@Model.clusterInfo.user_id</span>

            @{
                var a = "";
                var b = "";
                if (Model.clusterInfo.is_public == "0")
                {
                    a = "checked";
                }
                else if (Model.clusterInfo.is_public == "1")
                {
                    b = "checked";
                }
            }

            <label for="is_public" class="regis_col02L spanRed">是否公開</label>
            <div class="regis_col01R_input">
                <input type="radio" class="radioinput" id="is_public01" name="is_public" value="0" @a>
                <label for="is_public01">不公開</label>
                <input type="radio" class="radioinput" id="is_public02" name="is_public" value="1" @b>
                <label for="is_public02">公開</label>
            </div>

            <label for="" class="regis_col02L spanRed">聚落商家</label>
            <div class="regis_col02R">

                <input id="insert_id_cp" type="text" name="insert_id_cp" value="" class="regis_col02R" placeholder="請輸入帳號或公司名稱關鍵字" onchange="hidebtn()">

                <a id="addgroup" href="javascript:void(0)" class="addbu rightbox" style="display:none">@prj_BIZ_System.LanguageResource.User.lb_add</a>
                <table class="article_col1" id="membertable">

                    <tr>
                        <td>商家名稱</td>
                        <td>編輯</td>
                    </tr>
                    @{
                        var company = HttpUtility.UrlDecode(Request.Cookies["UserInfo"]["company"]);
                        var company_en = HttpUtility.UrlDecode(Request.Cookies["UserInfo"]["company_en"]);
                        if (Request.Cookies["_culture"] != null && Request.Cookies["_culture"].Value != "zh-TW")
                        {
                            if (company_en != null && company_en != "")
                            {
                                company = company_en;
                            }
                        }
                    }


                    @if (ViewBag.PageType == "Edit")
                    {
                        <tr id="grp_name_@Request.Cookies["UserInfo"]["user_id"]">
                            <td>
                                <input type="hidden" name="id" value="@Request.Cookies["UserInfo"]["user_id"]">

                                <label>@Request.Cookies["UserInfo"]["user_id"] - @company</label>
                            </td>
                            <td>
                                <div class="centerbox">
@*                                    <a href="javascript:void(0)" class="editbu tempeditbu" onclick="showDelete(@Request.Cookies["UserInfo"]["user_id"],@Request["cluster_no"])">退出</a>*@
                                </div>
                            </td>
                        </tr>

                    }
                    else {

                        <tr id="grp_name_@Request.Cookies["UserInfo"]["user_id"]">
                            <td>
                                <input type="hidden" name="id" value="@Request.Cookies["UserInfo"]["user_id"]">
                                <input type="hidden" name="user_id" value="@Request.Cookies["UserInfo"]["user_id"]">
                                <label>@Request.Cookies["UserInfo"]["user_id"] - @company</label>
                            </td>
                            <td></td>
                        </tr>
                    }

                    @if (Model.clusterMemberList != null)
                    {
                        foreach (ClusterMemberModel md in Model.clusterMemberList)
                        {
                            if (md.user_id != Request.Cookies["UserInfo"]["user_id"])
                            {
                                <tr id="grp_name_@md.user_id">
                                    <td>
                                        <input type="hidden" name="id" value="@md.user_id">
                                        <label>@md.user_id - @md.company</label>
                                    </td>
                                    <td>

                                    <div class="centerbox">
                                        @if (md.cluster_enable == "2")
                                        {
                                                <a href = "javascript:void(0)" class="editbu tempeditbu" onclick="showDelete(@md.user_id,@md.cluster_no)">取消</a>
                                        }
                                    </div>

                                    </td>
                                </tr>
                            }
                        }
                    }


                    @*<tr>
                            <td>
                                2、<input type="text" class="tags" placeholder="輸入帳號或公司名稱" required>
                            </td>
                        </tr>*@
                </table>

                <br />

            </div>

            <label for="" class="regis_col02L">內容</label>
            <textarea class="regis_col02R" name="cluster_info" id="" placeholder="@prj_BIZ_System.LanguageResource.User.lb_300less" maxlength="300">@Model.clusterInfo.cluster_info</textarea>

            <div class="centerbox">
                <button type="submit" class="buinfor">送出邀請</button>
                <button type="button" class="submitbu" onclick="javascript:history.back()">返回前頁</button>
            </div>

        </form>
        <div id="dialog" title="@prj_BIZ_System.LanguageResource.User.lb_delete" style="display:none;">
            <p>@prj_BIZ_System.LanguageResource.User.lb_delete<span class="salesid"></span>?</p>
        </div>
    </div>

<script type="text/javascript"
        src="~/Scripts/jquery-ui-1.10.2.min.js">
</script>

<script type="text/javascript" language="javascript">
    var g_no = 0;
    var user_id = "";
    var company = "";
        $(document).ready(function () {
            $("#insert_id_cp").autocomplete({
                source: "@Url.Action("GetUserInfoToIdCp", "Manager")",
                select: function (event, ui) {
                    var data = ui.item.label;
                    var arr = data.split(',');
//                    g_no++;
                    user_id = arr[0];
                    company = arr[1];
//                    $("#buyer_id").val(arr[0]);
                    //                    $("#buyer_cp").val(arr[1]);
//                    $("table.membertable").append(genTemplate(g_no++));
                    //                    $(this).appendTo($("table.membertable tr").last().find("td").last());
                    if (!idexist(user_id)) {
//                        $("#addgroup").show();
                        chkexist(user_id);
                    }
                    else {
                        $("#addgroup").hide();
                    }
                }
            });
        })

    $(function () {
        init();
    });
    function init() {

        var $addgroup = $("#addgroup");
        $addgroup.click(function (e) {
            $("#membertable").append(genTemplate());
//            g_no++;
            $("#insert_id_cp").val("");
            $("#addgroup").hide();
        });
    }

    function genTemplate() {
        var template =
        '<tr id="grp_name_' + user_id + '">' +
        '<td>' +
        '<input type="hidden" name="id" value="' + user_id + '">' +
        '<input type="hidden" name="user_id" value="' + user_id + '">' +
        '<label">' + user_id + ' - ' + company + '</label>' +
        '<td><div class="centerbox">' +
        '<a href="javascript:void(0)" class="editbu tempeditbu" onclick="showCancel('+ user_id +')">取消</a>' +
        '</div></td></tr>';
        return template;
    }
    function hidebtn() {
        $("#addgroup").hide();
    }

    function showCancel(id) {
        $('#grp_name_' + id).remove();
//        g_no--;
    }

//    function showDelete(id,cid) {
//        $('#grp_name_' + id).remove();
////        g_no--;
//    }

    function showDelete(id, cid) {
        var user_id = id;
        var cluster_no = cid;
        if (cluster_no != null && cluster_no != '') {
            $.ajax({
                type: "get",
                url: "@Url.Action("Cluster_Delete", "Cluster")",
                cache: false,
                data: { "user_id": user_id, "cluster_no": cluster_no },
                dataType: "json"
            }).done(function (result) {
                if (result != null) {
                    var Huser = result;
                    if (Huser == true) {
                        $('#grp_name_' + id).remove();
                    }
                    else {
                        alert("@prj_BIZ_System.LanguageResource.User.lb_delete_fail !!");
                    }
                } else {
                    alert("@prj_BIZ_System.LanguageResource.User.lb_delete_fail !!");
                }
            });
        }
    }

    function idexist(userid) {
        var e=false;
        $('#membertable').find('tr').each(function (index, el) {
            var id = null;
            id = $(el).find('td').eq(0).find("input[name='id']").val();
            if (id != null) {
                if (userid == id)
                {
                    e=true;
                    return;
                }
            }
        });
        return e;
    }

    function chkname() {

        var user_id = $("input[name='userid']").val();
        var cluster_name = $("input[name='cluster_name']").val();
        var cluster_name_old = $("input[name='cluster_name_old']").val();

        if (cluster_name != null && cluster_name != '' && cluster_name != cluster_name_old) {
            $.ajax({
                type: "get",
                url: "@Url.Action("CheckName", "Cluster")",
                cache: false,
                data: { "user_id": user_id, "cluster_name": cluster_name },
                dataType: "json"
            }).done(function (result) {
                if (result != null) {
                    var Huser = result;
                    if (Huser == true) {
                        alert("該建立者的聚落名稱已存在,請更改其他名稱!!");
                        $("input[name='cluster_name']").focus();
                    }
                }
            });
        }
    }

    function chkexist(uid) {
        var user_id = uid;
        var cluster_no = $("input[name='no']").val();
        if (cluster_no != null && cluster_no != '') {
            $.ajax({
                type: "get",
                url: "@Url.Action("CheckExist", "Cluster")",
                cache: false,
                data: { "user_id": user_id, "cluster_no": cluster_no },
                dataType: "json"
            }).done(function (result) {
                if (result != null) {
                    var Huser = result;
                    if (Huser == true) {
                        if (confirm("該廠商曾在該聚落,是否重新邀請?")) {
                            $("#addgroup").show();
                        } else {
                            $("#addgroup").hide();
                        }
                    }
                    else {
                        $("#addgroup").show();
                    }
                } else {
                    $("#addgroup").show();
                }
            });
        }
    }

    $("#form").submit(function () {
        g_no = -1;
        var members = "";
        $('#membertable').find('tr').each(function (index, el) {
            g_no++;
            var id = null;
            id=$(el).find('td').eq(0).find("input[name='user_id']").val();
            if (id != null) {
                members = members + "," + id;
                alert(id);
            }
        });

        if (g_no < 3) {
            alert("至少須三家廠商以上!!");
            return false;
        }
        $("input[name='members']").val(members);

    })

</script>

