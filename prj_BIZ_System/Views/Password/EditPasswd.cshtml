@using prj_BIZ_System.Models

@{
    ViewBag.Title = "EditPassword";
}

@section pagestyle{
    <link href="/stylesheets/password_edit.css" rel="stylesheet" />
}

<div class="article_col1">
    @{
        Html.RenderAction("_NavSearchPartial","User");
    }
    <article class="article_col2">
        <form action="@Url.Action("PasswordInsertUpdate","Password")" class="form_box" method="post">
            <h2>修改密碼</h2>
            <ul class="loginbox">
                <li>
                    <label for="">舊密碼:</label>
                    <input name="old_pw" type="password" text=""><br>
                </li>
                <li>
                    <label for="">新密碼:</label>
                    <input name="new_pw" type="password" text=""><br>
                </li>
                <li>
                    <label for="">確認新密碼:</label>
                    <input name="re_new_pw" type="password" text=""><br>
                </li>
            </ul>
            <div class="centerbox">
                <button class="buinfor" type="submit">修改密碼</button>
            </div>
        </form>
    </article>
</div>

