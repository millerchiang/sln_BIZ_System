@using prj_BIZ_System.Models
@model prj_BIZ_System.Models.Cluster_ViewModel
@{
    ViewBag.Title = "MessageClusterAddPublic";
}

@section pagestyle{
    <link href="/stylesheets/sys.css" rel="stylesheet" />
    <link href="http://code.jquery.com/ui/1.11.4/themes/hot-sneaks/jquery-ui.css" rel="stylesheet">
}

@Styles.Render("~/Content/jqueryUI")
<div class="article_col1">
    @{
        Html.RenderAction("_ClusterMenuPartial", "Cluster");
    }
    <div class="article_col2">
        <h2 class="borderTitle2">聚落A</h2>
        <form class="form_box sys_searchbox">
            <h2>公開訊息</h2>
            <label for="" class="regis_col02L">主題</label>
            <input type="text" class="regis_col02R">


            <label for="" class="regis_col02L">內容</label>
            <textarea class="regis_col02R" name="" id="" placeholder="@prj_BIZ_System.LanguageResource.User.lb_300less" maxlength="300"></textarea>
            <label for="" class="regis_col02L">@prj_BIZ_System.LanguageResource.User.lb_attachment_upload</label>
            <div class="regis_col02R">
                <label class="addbu" id="upload" for="upexl">@prj_BIZ_System.LanguageResource.User.lb_select</label>
                <input type="file" id="upexl" name="iupexl">
                <input type="text" id="upexl_name" name="upexl_name">
            </div>
            <div class="centerbox">
                <button type="submit" class="buinfor">確定新增</button>	<a href="group_msg_manager.html" class="submitbu">返回訊息管理</a>
            </div>

        </form>

    </div>
</div>
@Scripts.Render("~/bundles/jqueryUI")